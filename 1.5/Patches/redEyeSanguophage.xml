<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Sanguophage have red eyes</label>
        <id>RCP_GenesRedEyeSanguophage</id>
        <category>RCP_GenesPatches</category>
        <order>10</order>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>//XenotypeDef[defName="Sanguophage"]/genes</xpath>
				<value>
					<li MayRequire="oppey.eyegenes2">Eyes_Crimson</li>
					<li MayRequire="oppey.eyegenes2">Eyes_DeepRed</li>
					<li>Eyes_Red</li>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>