<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>RCP.Genes</modId>
		<key>RCP_RemovePigskin</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationRemove">
				<xpath>//FactionDef[defName="OutlanderRoughPig"] | //PawnKindDef[defaultFactionDef/text()="OutlanderRoughPig"] | //XenotypeDef/doubleXenotypeChances/Pigskin | //xenotypeSet/xenotypeChances/Pigskin</xpath>
			</Operation>
			<Operation Class="PatchOperationAdd">
				<xpath>//XenotypeDef[defName="Pigskin"]</xpath>
				<value>
					<factionlessGenerationWeight>0</factionlessGenerationWeight>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>RCP.Genes</modId>
		<key>RCP_PiggerBody</key>
		<defaultValue>false</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationRemove">
				<xpath>//XenotypeDef[defName="Pigskin"]/genes/li[text()="Body_Hulk"]</xpath>
			</Operation>
			<Operation Class="PatchOperationReplace">
				<xpath>//XenotypeDef[defName="Pigskin"]/genes/li[text()="Body_Fat"]/text()</xpath>
				<value>Body_Standard</value>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>